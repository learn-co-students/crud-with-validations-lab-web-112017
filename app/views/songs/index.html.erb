<h1>Songs</h1>

<div> <%= link_to 'Create Song', new_song_path %></div>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Artist</th>
      <th>Genre</th>
      <th></th>
    </tr>
  </thead>

<tbody>
<%@songs.each do |song| %>
    <tr>
      <td><%=song.title%></td>
      <td><%=song.release_year%></td>
      <td><%=song.artist_name%></td>
      <td><%=song.genre%></td>
      <td>
        <%=link_to 'View', song%> | <%= link_to 'Edit', edit_song_path(song)%> | <%= link_to 'delete', song, :method=> :delete, :confirm=> 'For real?' %>
     </td>
    </tr>
<%end%>
</tbody>
</table>
